<%# OVERRIDE Hyrax 3.5.0 to only show pdf download link on the file set show page %>
<% if display_media_download_link?(file_set: SolrDocument.find(file_set.id)) %>
  <div>
      <h2 class="sr-only"><%= t('hyrax.file_set.show.downloadable_content.heading') %></h2>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
      <% if controller_name == 'file_sets' %>
        <%= link_to t('hyrax.file_set.show.downloadable_content.pdf_link'),
                    hyrax.download_path(file_set),
                    target: :_blank,
                    id: "file_download",
                    data: { label: file_set.id } %>
      <% end %>
    </div>
<% else %>
    <div>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
    </div>
<% end %>
