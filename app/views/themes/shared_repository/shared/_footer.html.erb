<% #OVERRIDE Hyrax 5.0.1 for Atla shared search theme  %>
<footer class="navbar navbar-inverse site-footer">
  <div class="container-fluid">
    <div class="navbar-text">
      <!-- /begin nav links: OVERRIDE here to include nav links on bottom bar and have home linked to catalog for shared search -->
      <div class="row">
          <div class = 'col-xs-3 col-md-2 footer-link' <%= 'class=active' if current_page?(main_app.search_catalog_path) %>>
            <%= link_to t(:'hyrax.controls.home'), main_app.search_catalog_path, aria: current_page?(main_app.search_catalog_path) ? {current: 'page'} : nil %>
          </div>
          <div class = 'col-xs-3 col-md-2 footer-link' <%= 'class=active' if current_page?(hyrax.about_path) %>>
               <%= link_to t(:'hyrax.controls.about'), hyrax.about_path, aria: current_page?(hyrax.about_path) ? {current: 'page'} : nil %>
          </div>
          <div class = 'col-xs-3 col-md-2 footer-link' <%= 'class=active' if current_page?(hyrax.contact_path) %>>
             <%= link_to t(:'hyrax.controls.contact'), hyrax.contact_path, aria: current_page?(hyrax.contact_path) ? {current: 'page'} : nil %>
          </div>
          <div class = 'col-xs-3 col-md-2 footer-link' <%= 'class=active' if current_page?(hyrax.help_path) %>>
           <%= link_to t(:'hyrax.controls.help'), hyrax.help_path, aria: current_page?(hyrax.help_path) ? {current: 'page'} : nil %>
         </div>
      </div><!-- /.row -->
    </div><!-- /.navbar-text -->
  </div><!-- /.container-fluid -->
</footer>
